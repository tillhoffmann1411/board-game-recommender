# Board Game Recommender Environment Variables
#
# Copy this file to .env and fill in the values.
# For Docker: docker compose will read .env automatically.

# =============================================================================
# MongoDB
# =============================================================================

# MongoDB connection string
# For local development: mongodb://localhost:27017
# For Docker: mongodb://mongodb:27017 (uses service name)
# For MongoDB Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net
MONGODB_URI=mongodb://localhost:27017

# Database name
MONGODB_DB=board-game-recommender

# =============================================================================
# Clerk Authentication
# =============================================================================

# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Clerk redirect URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# =============================================================================
# Application
# =============================================================================

# Next.js
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# ETL Pipeline (Python)
# =============================================================================

# ETL Configuration
ETL_DATA_DIR=./data
ETL_RUN_BGG=false
ETL_RUN_ONLINE=false
ETL_RUN_TRANSFORM=true
ETL_RUN_LOAD=true
ETL_MIN_REVIEWS_GAME=500
ETL_MIN_REVIEWS_USER=5
ETL_BATCH_SIZE=1000
ETL_MAX_RETRIES=3
ETL_RETRY_DELAY=1.0
